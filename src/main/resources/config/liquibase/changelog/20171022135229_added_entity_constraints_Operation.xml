<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity Operation.
    -->
    <changeSet id="20171022135229-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="from_wallet_id"
                                 baseTableName="operation"
                                 constraintName="fk_operation_from_wallet_id"
                                 referencedColumnNames="id"
                                 referencedTableName="wallet"/>

        <addForeignKeyConstraint baseColumnNames="from_institution_id"
                                 baseTableName="operation"
                                 constraintName="fk_operation_from_institution_id"
                                 referencedColumnNames="id"
                                 referencedTableName="institution"/>

        <addForeignKeyConstraint baseColumnNames="from_asset_id"
                                 baseTableName="operation"
                                 constraintName="fk_operation_from_asset_id"
                                 referencedColumnNames="id"
                                 referencedTableName="asset"/>

        <addForeignKeyConstraint baseColumnNames="to_wallet_id"
                                 baseTableName="operation"
                                 constraintName="fk_operation_to_wallet_id"
                                 referencedColumnNames="id"
                                 referencedTableName="wallet"/>

        <addForeignKeyConstraint baseColumnNames="to_asset_id"
                                 baseTableName="operation"
                                 constraintName="fk_operation_to_asset_id"
                                 referencedColumnNames="id"
                                 referencedTableName="asset"/>

        <addForeignKeyConstraint baseColumnNames="to_institution_id"
                                 baseTableName="operation"
                                 constraintName="fk_operation_to_institution_id"
                                 referencedColumnNames="id"
                                 referencedTableName="institution"/>

    </changeSet>
</databaseChangeLog>
